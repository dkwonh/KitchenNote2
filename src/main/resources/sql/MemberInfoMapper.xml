<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MemberInfo">

	<select id="view" resultType="yh.mypage.controller.MemberInfoDto">
		select 
		<!-- <if test = "level == '1'"> -->
		nickname, member_id,
		picture, level
		 from members where member_id = #{member_id}
		<!-- </if> -->
		<!-- <if test= "level == 2">
		m.nickname,m.member_id,
		m.picture, m.Level, c.tel, c.sns_address
		from members m inner join chef c on m.member_id where m.member_id = #{member_id} 
		</if> -->
	</select>

	<insert id="submit"
		parameterType="yh.mypage.controller.Chef_applyDto">
		insert into Chef_apply
		values (#{member_id},
		#{sns_address}, #{tel},#{content})
	</insert>

	<update id="memupdate"
		parameterType="yh.mypage.controller.MemberInfoDto">
		update members set nickname=#{nickname} where
		member_id= #{member_id}
	</update>

	<update id="chefupdate"
		parameterType="yh.mypage.controller.ChefDto">
		update chef set tel=#{tel}, sns_address = #{sns_address}
		where chef = #{chef}
	</update>

	<select id="checkPwd"
		parameterType="yh.mypage.controller.MemberInfoDto">
		select password from members
	</select>

	<delete id="delete" parameterType="String">
		delete from members where member_id = #{member_id} 
	</delete>

	<update id="changePwd"
		parameterType="map">
		update members m inner join chef c
		on m.member_id = c.chef
		set password = #{pwdcheck1}
		where m.member_id = #{member_id} and c.chef= #{chef}
	</update>

	<select id="pwd"
		parameterType="yh.mypage.controller.MemberInfoDto" resultType="int">
		select
		password
		from members m inner join chef c
		where m.member_id = #{member_id} and c.chef= #{chef}
	</select>

</mapper>