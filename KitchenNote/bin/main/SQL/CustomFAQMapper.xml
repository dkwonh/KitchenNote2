<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="FAQ">
	<select id="listAll" resultType="yh.custom.controller.FAQDto">
		select * from Admin_FAQ order by
		bno desc limit #{start}, 10
	</select>

	<select id="count" resultType="int">
		select count(*) from Admin_FAQ
	</select>
	
	<select id="FAQView" resultType="yh.custom.controller.FAQDto">
		select * from Admin_FAQ where bno = #{bno}
	</select>

	<update id="increaseViewcnt" parameterType="int">
		update Admin_FAQ set viewcnt = viewcnt +1 where bno = #{bno}
	</update>
	
</mapper>