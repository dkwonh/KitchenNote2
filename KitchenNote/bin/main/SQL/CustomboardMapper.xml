<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="customer">

	<select id="listAll" resultType="yh.custom.controller.BoardDto">
		select * from FAQ_user order by
		bno desc, regdate desc

	</select>

	<insert id="insert" parameterType="yh.custom.controller.BoardDto">
		insert into FAQ_user values(
		#{bno},
		#{title}, #{content}, #{writer},#{regdate},#{viewcnt} ,#{open}
		)
	</insert>

	<select id="view" resultType="yh.custom.controller.BoardDto">
		select * from FAQ_user where bno =
		#{bno}
	</select>

	<update id="increaseViewcnt" parameterType="int">
		update FAQ_user set
		viewcnt = viewcnt +1 where bno = #{bno}
	</update>

	<update id="updateArticle">
		update FAQ_user set title = #{title}, content =
		#{content}, writer = #{writer},
		regdate = #{regdate},open = #{open} where bno = #{bno}
	</update>

	<delete id="deleteArticle">
		delete from FAQ_user where bno = #{bno}
	</delete>

